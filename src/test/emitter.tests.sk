# Test unary assignment operator pass-through
test("
void main() {
  int x = 0;
  float y = 0.0;

  x++;
  x--;
  ++x;
  --x;

  y++;
  y--;
  ++y;
  --y;
}
", "
void main() {
  int x = 0;
  float y = 0.0;
  x++;
  x--;
  ++x;
  --x;
  y++;
  y--;
  ++y;
  --y;
}
")

